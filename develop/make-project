name=$1
template=`dirname $0`/SubProject-Template.tgz

if [ "$name" = "" ] ; then
    echo "Usage:"
    echo "        $0 <projectname>"
    exit 1
fi

if [ -e $name ] ; then
    echo "$name: file exists"
    exit 1
fi

gunzip < $template | tar -xf - 
mv SubProject-Template $name
cd $name

for f in .??* * ; do
    if [ -f $f ] ; then
	/bin/mv $f xxx
	/bin/sed -e "s/xXx/$name/" xxx > $f
	/bin/rm xxx
    fi
done

#(cd ..; svn add -q $name)

mkdir target target/classes
#svn propset -q svn:ignore 'target' .

#
