if [ "$JAVA_HOME" = "" ] ; then
  echo "ERROR: JAVA_HOME not found in your environment."
  echo
  echo "Please, set the JAVA_HOME variable in your environment to match the"
  echo "location of the Java Virtual Machine you want to use."
  exit 1
fi

EXTEX_HOME=`dirname $0`/..

# OS specific support.
case "`uname`" in
  CYGWIN*)
    # For Cygwin, ensure paths are in UNIX format before anything is touched
    [ -n "$JAVA_HOME" ] &&
        JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
    SEP=';'
    LOCALCLASSPATH=.
    for i in `echo $EXTEX_HOME/ExTeX-*/target/classes` ; do
      LOCALCLASSPATH="$LOCALCLASSPATH$SEP`cygpath --unix "$i"`"
    done
    for i in `echo $EXTEX_HOME/ExTeX-*/lib/*.jar` ; do
      LOCALCLASSPATH="$LOCALCLASSPATH$SEP`cygpath --unix "$i"`"
    done
    ;;
  *)
    LOCALCLASSPATH=.
    for i in `echo $EXTEX_HOME/ExTeX-*/target/classes` ; do
      LOCALCLASSPATH=$LOCALCLASSPATH:$i
    done
    for i in `echo $EXTEX_HOME/ExTeX-*/lib/*.jar` ; do
      LOCALCLASSPATH=$LOCALCLASSPATH:
    done
    ;;
esac

#echo $LOCALCLASSPATH

exec java $EXTEX_JAVA_OPTS -classpath "$LOCALCLASSPATH" \
    org.extex.tex.main.TeX -progname=`basename $0` $*

#