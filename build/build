# THIS FILE SHOULD BE EXECUTABLE.
#------------------------------------------------------------------------------

verbose=0
html=1
if [ "$1" = "-v" ] ; then
    shift
    verbose=1
fi
if [ "$1" = "-q" ] ; then
    shift
    verbose=0
fi
if [ "$1" = "-n" ] ; then
    shift
    html=0
fi

if [ $verbose = 1 ] ; then
    echo
    echo "ExTeX Build System"
    echo "------------------"
    echo
fi

if [ "$JAVA_HOME" = "" ] ; then
    echo "ERROR: JAVA_HOME not found in your environment."
    echo
    echo "Please, set the JAVA_HOME variable in your environment to match the"
    echo "location of the Java Virtual Machine you want to use."
    exit 1
fi

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
case "`uname`" in
    CYGWIN*) cygwin=true ;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$JAVA_HOME" ] &&
        JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

if [ ! -e $JAVA_HOME/lib/tools.jar ] ; then
    echo "Found no tools.jar in $JAVA_HOME/lib"
    exit 1
fi

if [ -z "$ANT_HOME" ] ; then
    echo
    echo "Please, set the ANT_HOME variable in your environment to match the"
    echo "location of the Ant installation you want to use."
    exit 1
fi

LIBDIR=lib

LOCALCLASSPATH=.
LOCALCLASSPATH=$JAVA_HOME/lib/tools.jar
LOCALCLASSPATH=$LOCALCLASSPATH:$JAVA_HOME/lib/classes.zip

for i in $ANT_HOME/lib/*.jar ; do
    LOCALCLASSPATH=$LOCALCLASSPATH:$i
done
for i in $LIBDIR/*.jar ; do
    LOCALCLASSPATH=$LOCALCLASSPATH:$i
done

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
    JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
    LOCALCLASSPATH=`cygpath --path --windows "$LOCALCLASSPATH"`
fi

if [ $verbose = 1 ] ; then
    echo
    echo $JAVA_HOME
    echo Building with classpath $LOCALCLASSPATH
    echo Starting Ant...
    echo
fi

if [ $html = 0 ] ; then

   $JAVA_HOME/bin/java					\
	-Dant.home=$ANT_HOME				\
	-Dant.XmlLogger.stylesheet.uri=lib/ant/log.xsl	\
	-classpath "$LOCALCLASSPATH"			\
	org.apache.tools.ant.Main			\
	$*

else

    $JAVA_HOME/bin/java					\
	-Dant.home=$ANT_HOME				\
	-Dant.XmlLogger.stylesheet.uri=lib/ant/log.xsl	\
	-classpath "$LOCALCLASSPATH"			\
	org.apache.tools.ant.Main			\
	-quiet						\
	-logger org.apache.tools.ant.XmlLogger		\
	-logfile target/build.log			\
	$*


    # The second pass translates the log file into a HTML file

   $JAVA_HOME/bin/java				\
	-Dant.home=$ANT_HOME			\
	-classpath "$LOCALCLASSPATH"		\
	org.apache.tools.ant.Main		\
	-logfile target/build-html.log		\
	-quiet					\
	build.html
fi

#
