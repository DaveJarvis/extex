<project name="ExTeX nightly build system" default="all" basedir=".">

  <description>
  </description>

  <property name="deploy.dir" location="target/site" />

  <property name="log.dir" value="target" />
  <property name="log.file" value="build.log" />
  <property name="log.style" location="./src/xslt/ant-log.xsl" />

  <property name="report.file" value="target/build.html" />

  <condition property="bat" value=".bat" else="">
    <os family="windows"/>
  </condition>
  
  <!-- ==================================================================== -->
  <target name="all"
          description="Build nearly everything and translate the build log into a HTML page">

    <mkdir dir="${log.dir}" />
    <delete file="${report.file}"/>
    <exec executable="ant${bat}">
      <arg value="-quiet" />
      <arg value="-logger" />
      <arg value="org.apache.tools.ant.XmlLogger" />
      <arg value="-logfile" />
      <arg value="${log.dir}/${log.file}" />
      <arg value="all" />
    </exec>

    <xslt in="${log.dir}/${log.file}"
          out="${report.file}"
          style="${log.style}" />
    <delete file="${log.dir}/${log.file}"/>
  </target>

  <!-- ==================================================================== -->
  <target name="deploy"
          description="Create the site and deploy it to the destination"
          >

    <mkdir dir="${deploy.dir}" />
    <copy todir="${deploy.dir}">
      <fileset dir="../build/target/application/html"/>
    </copy>
  </target>

</project>
