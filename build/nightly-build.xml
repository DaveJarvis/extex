<project name="ExTeX nightly build system" default="all" basedir=".">

  <description>
  </description>

  <property name="log.dir" value="target" />
  <property name="log.file" value="build.log" />
  <property name="log.style" location="./src/xslt/ant-log.xsl" />

  <property name="report.file" value="target/build.html" />

  <!-- ==================================================================== -->
  <target name="all"
          description="Build nearly everything">

    <mkdir dir="${log.dir}"/>
    <java fork="true"
          classname="org.apache.tools.ant.Main">
      <classpath>
        <fileset dir="${ant.home}/lib" includes="*.jar" />
      </classpath>
      <jvmarg value="-Dant.home=${ant.home}"/>
      <arg value="-quiet"/>
      <arg value="-logger"/>
      <arg value="org.apache.tools.ant.XmlLogger"/>
      <arg value="-logfile"/>
      <arg value="${log.dir}/${log.file}"/>
      <arg value="xxx"/>
    </java>

    <xslt in="${log.dir}/${log.file}"
          out="${report.file}"
          style="${log.style}"
          />
  </target>

</project>
