all: extex-users.pdf

%.pdf:%.toc %.ind
	pdflatex $*
	pdflatex $*

%.ind:%.idx
	makeindex -s doc.ist $*

%.idx:%.tex
	pdflatex $*

%.toc:%.tex
	pdflatex $*


