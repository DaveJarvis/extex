<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>ExTeX-Unit-tex</artifactId>
  <name>ExTeX Unit TeX</name>
  <description>
    This is the ExTeX unit TeX.
    A unit in ExTeX is a loadable module providing a set of primitives.
    Those primitives are implemented as Java classes.
    
    The unit TeX provides most of the TeX primitives.
  </description>

  <packaging>jar</packaging>
  <inceptionYear>2003</inceptionYear>
  <url>http://www.extex.org</url>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>extex</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Interpreter-API</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-base</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Typesetter-tex</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Scanner-API</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-base-test</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Interpreter-max</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Backend-dump</artifactId>
      <scope>test</scope>
    </dependency>
    
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Scanner</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Typesetter-core</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-Font-tfm</artifactId>
      <scope>test</scope>
    </dependency>

