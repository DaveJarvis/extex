<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.extex</groupId>
  <artifactId>ExBib-core</artifactId>
  <name>ExBib Core</name>
  <description>
    This is the ExBib core component. It provides the functionality of ExBib to
    be used from Java.
  </description>

  <packaging>jar</packaging>
  <inceptionYear>2002</inceptionYear>
  <url>http://www.extex.org</url>

  <distributionManagement>
    <site>
      <id>org.extex.exbib.core</id>
      <name>ExBib Core Site</name>
      <url>file:///serv/www/extex/snapshot/ExBib/Exbib-core</url>
    </site>
  </distributionManagement>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.2</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <properties>
    <extex.directory>${basedir}/../..</extex.directory>
    <exbib.directory>${basedir}/..</exbib.directory>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-resource</artifactId>
    </dependency>
  </dependencies>

  <build>
    <extensions>
      <extension>
        <groupId>org.extex</groupId>
        <artifactId>develop</artifactId>
        <version>1.3</version>
      </extension>
    </extensions>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <archive>
            <index>true</index>
            <manifest>
              <packageName>org.extex.exbib.main</packageName>
              <addClasspath>true</addClasspath>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addExtensions>true</addExtensions>
            </manifest>
            <manifestEntries>
              <url>${project.url}</url>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <url>http://www.gerd-neugebauer.de</url>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

</project>
