<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.extex</groupId>
  <artifactId>ExBib-groovy</artifactId>
  <name>ExBib groovy</name>
  <description>
    This is the ExBib groovy adaptor.
  </description>

  <packaging>jar</packaging>
  <inceptionYear>2002</inceptionYear>
  <url>http://www.extex.org</url>

  <distributionManagement>
    <site>
      <id>org.extex.exbib.groovy</id>
      <name>ExBib Groovy Site</name>
      <url>http:///www.extex.org/ExBib/snapshot/Exbib-groovy</url>
    </site>
  </distributionManagement>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.1</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <properties>
    <extex.directory>${basedir}/../..</extex.directory>
    <exbib.directory>${basedir}/..</exbib.directory>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExBib-bsf</artifactId>
    </dependency>

    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy</artifactId>
      <version>1.7.4</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.codehaus.groovy</groupId>
                  <artifactId>groovy</artifactId>
                  <version>1.5.7</version>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <excludeGroupIds>org.extex</excludeGroupIds>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <url>http://www.gerd-neugebauer.de</url>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

</project>
