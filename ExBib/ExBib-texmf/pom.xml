<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.extex</groupId>
  <artifactId>ExBib-texmf</artifactId>
  <name>ExBib texmf</name>
  <description>
    This is a source for ExBib styles and assets. Those files are packaged into
    a jar which is prepared for the ClasspathArchiveFinder.
  </description>

  <packaging>jar</packaging>
  <inceptionYear>2008</inceptionYear>
  <url>http://www.extex.org</url>

  <distributionManagement>
    <site>
      <id>org.extex.exbib.texmf</id>
      <name>ExBib TeX MF Site</name>
      <url>file:///serv/www/extex/snapshot/ExBib/Exbib-texmf</url>
    </site>
  </distributionManagement>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.2</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <url>http://www.gerd-neugebauer.de</url>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExTeX-resource</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
            <phase>compile</phase>
          </execution>
        </executions>
        <configuration>
          <mainClass>org.extex.resource.tool.TocIndex</mainClass>
          <arguments>
            <argument>--omit=.*/\\.svn$</argument>
            <argument>--omit=.*/META-INF$</argument>
            <argument>--output=${project.build.directory}/toc.index</argument>
            <argument>${project.build.directory}/classes/</argument>
          </arguments>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <targets>
                <mkdir dir="${project.build.directory}/classes/META-INF" />
                <touch file="${project.build.directory}/toc.index" />
                <move  file="${project.build.directory}/toc.index"
                       todir="${project.build.directory}/classes/META-INF"/>
              </targets>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
