<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>ExBib-bst2gy</artifactId>
  <name>ExBib BST to Groovy Compiler</name>
  <description>
    This is the ExBib BST to Groovy Compiler. It takes a BST files and produces
    an equivalent Groovy file which can be used for further refinement in the 
    higher programming language Groovy.

    Note that not all dirty tricks possible in the BST language are translated.
    Passing code around on the stack and multiple return values are currently
    not supported. They lead to an compile error.
  </description>

  <packaging>jar</packaging>
  <inceptionYear>2002</inceptionYear>
  <url>http://www.extex.org</url>

  <distributionManagement>
    <site>
      <id>org.extex.exbib.bst2gy</id>
      <name>ExBib BST 2 Groovy Site</name>
      <url>${project.repo.exbib}/${project.artifactId}</url>
    </site>
  </distributionManagement>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.2</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExBib-core</artifactId>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>CLI</artifactId>
      <version>0.1</version>
    </dependency>

    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExBib-groovy</artifactId>
      <version>0.2</version>
      <scope>test</scope>
    </dependency>
    
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExBib-bsf</artifactId>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <url>http://www.gerd-neugebauer.de</url>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

</project>
