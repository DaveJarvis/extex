<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>ExBib-Documentation</artifactId>
  <name>ExBib documentation</name>
  <description>
    This is the ExBib documentation.
  </description>

  <version>1.0</version>
  <packaging>pom</packaging>
  <inceptionYear>2008</inceptionYear>
  <url>http://www.extex.org</url>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <echo message="latex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="pdflatex"
                      output="${basedir}/target/log.txt"
                      append="false">
                  <arg value="exbib-manual"/>
                </exec>
                <echo message="bibtex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="bibtex"
                      failonerror="true"
                      output="${basedir}/target/log.txt"
                      append="true">
                  <arg value="exbib-manual"/>
                </exec>
                <echo message="makeindex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="makeindex"
                      failonerror="false"
                      output="${basedir}/target/log.txt"
                      append="true">
                  <arg line="-s texinputs/doc.ist exbib-manual.idx"/>
                </exec>
                <echo message="latex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="pdflatex"
                      failonerror="true"
                      output="${basedir}/target/log.txt"
                      append="true">
                  <arg value="exbib-manual"/>
                </exec>
                <echo message="latex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="pdflatex"
                      failonerror="true"
                      output="${basedir}/target/log.txt"
                      append="true">
                  <arg value="exbib-manual"/>
                </exec>
                <echo message="latex exbib-manual"/>
                <exec dir="${basedir}/src/main/tex"
                      executable="pdflatex"
                      failonerror="true"
                      output="${basedir}/target/log.txt"
                      append="true">
                  <arg value="exbib-manual"/>
                </exec>
                <echo message="moving files to target"/>
                <move todir="${basedir}/target">
                  <fileset dir="${basedir}/src/main/tex">
                    <include name="*.log"/>
                    <include name="*.aux"/>
                    <include name="*.blg"/>
                    <include name="*.bbl"/>
                    <include name="*.idx"/>
                    <include name="*.ind"/>
                    <include name="*.ilg"/>
                    <include name="*.toc"/>
                    <include name="*.out"/>
                    <include name="*.dvi"/>
                    <include name="*.pdf"/>
                  </fileset>
                </move>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
        <role>build manager</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

</project>
