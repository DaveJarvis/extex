<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>ExBib-Documentation</artifactId>
  <name>ExBib documentation</name>
  <description>
    This is the ExBib documentation.
  </description>

  <version>0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <inceptionYear>2008</inceptionYear>
  <url>http://www.extex.org</url>

  <properties>
    <basename>extex-developers</basename>
  </properties>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExBib</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.extex</groupId>
      <artifactId>ExBib-Main</artifactId>
      <version>0.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <id>latex-1</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <executable>pdflatex</executable>
              <arguments>
                <argument>-halt-on-error</argument>
                <argument>-output-directory=${project.build.directory}</argument>
                <argument>${basename}</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/tex/manual</workingDirectory>
              <environmentVariables>
                <TEXINPUTS>${basedir}/../src/main/texinputs${path.separator}${basedir}/src/main${path.separator}chapter${path.separator}${path.separator}.</TEXINPUTS>
              </environmentVariables>
              <outputFile>${project.build.directory}/manual.out</outputFile>
            </configuration>
          </execution>

          <execution>
            <id>exbib</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <classpath/>
                <argument>org.extex.exbib.main.ExBibMain</argument>
                <argument>--quiet</argument>
                <argument>-Dtexinputs=${basedir}/../src/main/texinputs/bibtex${path.separator}${basedir}/../src/main/bibtex</argument>
                <argument>--logfile=${project.build.directory}/${basename}.blg</argument>
                <argument>${project.build.directory}/${basename}</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/tex/manual</workingDirectory>
            </configuration>
          </execution>

          <execution>
            <id>makeindex</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <executable>makeindex</executable>
              <arguments>
                <argument>-s</argument>
                <argument>../../src/main/texinputs/makeindex/doc.ist</argument>
                <argument>${basename}.idx</argument>
              </arguments>
              <workingDirectory>${project.build.directory}</workingDirectory>
              <environmentVariables>
                <TEXINPUTS>${basedir}/../src/main/texinputs${path.separator}.</TEXINPUTS>
              </environmentVariables>
              <outputFile>${project.build.directory}/manual.out</outputFile>
            </configuration>
          </execution>

          <execution>
            <id>latex-2</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <executable>pdflatex</executable>
              <arguments>
                <argument>-halt-on-error</argument>
                <argument>-output-directory=${project.build.directory}</argument>
                <argument>${basename}</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/tex/manual</workingDirectory>
              <environmentVariables>
                <TEXINPUTS>${basedir}/../src/main/texinputs${path.separator}${basedir}/src/main${path.separator}chapter${path.separator}${path.separator}.</TEXINPUTS>
              </environmentVariables>
              <outputFile>${project.build.directory}/manual.out</outputFile>
            </configuration>
          </execution>

          <execution>
            <id>latex-3</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <executable>pdflatex</executable>
              <arguments>
                <argument>-halt-on-error</argument>
                <argument>-output-directory=${project.build.directory}</argument>
                <argument>${basename}</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/tex/manual</workingDirectory>
              <environmentVariables>
                <TEXINPUTS>${basedir}/../src/main/texinputs${path.separator}${basedir}/src/main${path.separator}chapter${path.separator}${path.separator}.</TEXINPUTS>
              </environmentVariables>
              <outputFile>${project.build.directory}/manual.out</outputFile>
            </configuration>
          </execution>

        </executions>
      </plugin>

