<project name="ExTeX site" default="all" basedir=".">

  <description>
    The ExTeX site is build from a set of templates.
  </description>

  <property name="target" location="target" />
  <property name="site" location="target/site" />
  <property name="verbose" value="false" />

  <import file="build-unit.xml"/>

  <!-- ==================================================================== -->
  <target name="all"
          description="Build everything"
          depends="site,rss,unit" />

  <!-- ==================================================================== -->
  <target name="rss"
          description="Create the RSS pages">
    <mkdir dir="${site}/rss/2.0"/>
    <exec executable="perl"
          failonerror="true">
      <arg line="bin/make-rss.pl" />
      <arg line="-out=${site}/rss/2.0/ExTeX.rss" />
    </exec>
  </target>

  <!-- ==================================================================== -->
  <target name="site"
          description="Create the web site"
          depends="test-summary">
    <exec executable="perl"
          failonerror="true">
      <arg line="bin/make.pl" />
      <arg line="-src=src/site" />
      <arg line="-dest=${site}" />
    </exec>
  </target>

  <!-- ==================================================================== -->
  <target name="test-summary"
          description="Create the RSS pages">
    <mkdir dir="${site}/reports"/>
    <exec executable="perl"
          failonerror="true">
      <arg line="bin/make-test-summary.pl" />
      <arg line="-out=${site}/reports/test-summary.html" />
    </exec>
  </target>

  <!-- ==================================================================== -->
  <target name="clean"
          description="Remove generated files and directories.">
    <delete dir="${site}" />
  </target>

</project>
