<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.extex</groupId>
  <artifactId>ExIndex-Installer</artifactId>
  <name>ExIndex install system</name>
  <description>
    This is the ExIndex install system.
  </description>

  <version>0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <inceptionYear>2008</inceptionYear>
  <url>http://www.extex.org</url>

  <parent>
    <groupId>org.extex</groupId>
    <artifactId>ExIndex</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>izpack</groupId>
      <artifactId>standalone-compiler</artifactId>
      <version>3.8.0</version>
      <scope>package</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <configuration>
              <tasks>
                <taskdef name="izpack"
                         classname="com.izforge.izpack.ant.IzPackTask" />
                <izpack  input="${basedir}/src/installer/install.xml"
                         output="${project.build.directory}/ExIndex-installer-0.1.jar"
                         basedir="${basedir}/src/installer" />
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>izpack</groupId>
            <artifactId>standalone-compiler</artifactId>
            <version>3.8.0</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>gene</id>
      <name>Gerd Neugebauer</name>
      <email>gene@gerd-neugebauer.de</email>
      <url>http://www.gerd-neugebauer.de</url>
      <roles>
        <role>maintainer</role>
        <role>developer</role>
        <role>build manager</role>
      </roles>
      <timezone>+1</timezone>
      <properties/>
    </developer>
  </developers>

</project>
